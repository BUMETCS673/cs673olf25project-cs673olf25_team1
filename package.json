{
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.4.0",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.2"
  },
  "scripts": {
    "dev:frontend": "cross-env NODE_ENV=test npm --prefix ./chit-chat-ui run dev",
    "dev:backend": "cross-env NODE_ENV=test npm --prefix ./api run start",
    "test:e2e": "playwright test -c tests/playwright.config.ts",
    "test:ui": "playwright test --ui -c tests/playwright.config.ts",
    "codegen": "playwright codegen -c tests/playwright.config.ts"
  }
}
